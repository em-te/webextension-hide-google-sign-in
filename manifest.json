{
  "name": "Hide G Sign In",
  "author": "Terry",
  "version": "0.1.1",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "offline_enabled": true,

  "icons": {
    "24": "icon_24.png",
    "48": "icon_48.png",
    "96": "icon_96.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": {
      "24": "icon_24.png",
      "48": "icon_48.png",
      "96": "icon_96.png"  
    },
    "default_title": "__MSG_toolbarTitle__"
  },

  "declarative_net_request": {
    "rule_resources": [{
      "id": "gsi",
      "enabled": true,
      "path": "rules.json"
    }]
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": ["activeTab", "declarativeNetRequest", "webNavigation", "notifications", "storage"],

  "optional_permissions": ["*://*/*"]
}